          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/MoodleCreateCategoryRequest"
              },
              "example": {
                "categories": [
                  {
                    "name": "Teknik Komputer",
                    "parent": 0,
                    "idnumber": "TK_2025",
                    "description": "Kategori untuk program studi Teknik Komputer",
                    "descriptionformat": 1,
                    "theme": "boost"
                  }
                ]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Kategori berhasil dibuat",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "example": {
                    "code": "201",
                    "message": "Kategori berhasil dibuat",
                    "data": [
                      {
                        "id": 8,
                        "name": "Perbandingan Madzab"
                      },
                      {
                        "id": 9,
                        "name": "Teknologi Industri Pertanian"
                      }
