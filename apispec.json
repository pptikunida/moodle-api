                }
              }
            }
          },
          "400": {
            "description": "Request tidak valid",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "example": {
                    "code": "400",
                    "message": "Field `categories` tidak boleh kosong",
                    "data": null
                  }
                }
              }
            }
          },
          "500": {
            "description": "An internal error occurred",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "example": {
                    "code": "500",
                    "message": "An internal error occurred",
                    "data": null
                  }
